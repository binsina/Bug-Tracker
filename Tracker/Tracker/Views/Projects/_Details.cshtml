@model Tracker.Models.Project


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>


<div class="modal-header w3-modal-content w3-animate-zoom w3-center w3-transparent w3-padding-64">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Details</h4>




    <div class="modal-body">

        <table id="example" class="table table-responsive" cellspacing="0">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>

                    <th>
                        @Html.DisplayName("Project Manager")
                    </th>




                </tr>
            </thead>

            <tbody>
                <tr>

                    <td>
                        @Html.DisplayFor(model => model.Title)
                    </td>
                    <td>
                        @Html.Raw(Model.Description)

                    </td>


                    <td>
                        @Model.Created.DateTime.ToLongDateString()
                    </td>



                    <td>
                        @foreach (var users in Model.Users)
                        {
                            <p>@users.FirstName @users.DisplayName</p>

                        }
                    </td>
            </tbody>

        </table>
    </div>


    <div class="modal-footer">

        <div class="row">
            <div class="col-sm-4" style="background-color:lavender;">@Html.ActionLink("Assign Project Manager", "AssignPM", new { id = Model.Id }, new { @class = "btn btn-primary btn-large" })</div>
            <div class="col-sm-4" style="background-color:lavenderblush;"></div>
            <div class="col-sm-4" style="background-color:lavender;">@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-large" })</div>
        </div>
        <div class="row">
            <div class="col-sm-4" style="background-color:lavender;">
                @Html.ActionLink("Assign Developer", "AssignDEV", new { id = Model.Id }, new { @class = "btn btn-primary btn-large" })
            </div>
            <div class="col-sm-4" style="background-color:lavenderblush;"><button type="button" class="btn btn-default" data-dismiss="modal">Close</button></div>
            <div class="col-sm-4" style="background-color:lavender;">@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-large" })</div>
        </div>
    </div>







</div>

